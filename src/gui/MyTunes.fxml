<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MyTunesController">
   <children>
      <Label layoutX="38.0" layoutY="75.0" text="Playlists" />
      <TableView fx:id="tvPlaylists" layoutX="28.0" layoutY="92.0" onMouseClicked="#showPlaylist" prefHeight="382.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="tcPlaylistName" prefWidth="88.0" text="Name" />
          <TableColumn fx:id="tcNumberSongs" prefWidth="47.0" text="Songs" />
            <TableColumn fx:id="tcPlaylistTime" prefWidth="64.0" text="Time" />
        </columns>
      </TableView>
      <TableView fx:id="tvSongTable" layoutX="507.0" layoutY="92.0" onMouseClicked="#clearPlaylistSongTable" prefHeight="382.0" prefWidth="364.0">
         <columns>
            <TableColumn fx:id="tcSongTitle" prefWidth="143.0" text="Title" />
            <TableColumn fx:id="tcSongArtist" prefWidth="145.0" text="Artist" />
            <TableColumn fx:id="tcSongTime" prefWidth="75.0" text="Time" />
         </columns>
      </TableView>
      <TextField fx:id="txtSearchBar" layoutX="709.0" layoutY="34.0" prefHeight="26.0" prefWidth="150.0" />
      <Label layoutX="675.0" layoutY="38.0" text="Filter:" />
      <Label layoutX="246.0" layoutY="75.0" text="Songs on Playlist" />
      <Label layoutX="507.0" layoutY="75.0" text="Songs" />
      <Button layoutX="507.0" layoutY="485.0" mnemonicParsing="false" onAction="#addToPlaylist" prefHeight="26.0" text="Add To Playlist" />
      <Button layoutX="28.0" layoutY="485.0" mnemonicParsing="false" onAction="#newPlaylist" prefHeight="25.0" prefWidth="55.0" text="New" />
      <Button layoutX="102.0" layoutY="485.0" mnemonicParsing="false" onAction="#updatePlaylist" text="Update" />
      <Button layoutX="172.0" layoutY="485.0" mnemonicParsing="false" onAction="#deletePlaylist" prefHeight="25.0" prefWidth="55.0" text="Delete" />
      <Button layoutX="246.0" layoutY="485.0" mnemonicParsing="false" onAction="#positionUp" prefHeight="25.0" prefWidth="55.0" text="▲" />
      <Button layoutX="309.0" layoutY="485.0" mnemonicParsing="false" onAction="#positionDown" prefHeight="25.0" prefWidth="55.0" text="▼" />
      <Button layoutX="414.0" layoutY="485.0" mnemonicParsing="false" onAction="#removeFromPlaylist" prefHeight="25.0" prefWidth="55.0" text="Delete" />
      <Button layoutX="677.0" layoutY="485.0" mnemonicParsing="false" onAction="#newSong" prefHeight="25.0" prefWidth="55.0" text="New" />
      <Button layoutX="742.0" layoutY="485.0" mnemonicParsing="false" onAction="#editSong" prefHeight="25.0" prefWidth="55.0" text="Edit" />
      <Button layoutX="816.0" layoutY="485.0" mnemonicParsing="false" onAction="#deleteSong" prefHeight="25.0" prefWidth="55.0" text="Delete" />
      <Slider fx:id="volumeController" blockIncrement="1.0" layoutX="329.0" layoutY="48.0" onMouseClicked="#setVolume" onMouseReleased="#setFinishVolume" prefHeight="14.0" prefWidth="170.0" value="100.0" />
      <Button layoutX="102.0" layoutY="23.0" mnemonicParsing="false" onAction="#playPause" text="⏯">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button layoutX="37.0" layoutY="23.0" mnemonicParsing="false" onAction="#previousSong" text="⏮">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button layoutX="164.0" layoutY="23.0" mnemonicParsing="false" onAction="#nextSong" text="⏭">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <TableView fx:id="tvPlaylistSongTable" layoutX="238.0" layoutY="92.0" onMouseClicked="#clearSongTableSelection" prefHeight="382.0" prefWidth="259.0">
         <columns>
            <TableColumn fx:id="tcPlaylistSongs" prefWidth="258.0" text="Title" />
         </columns>
      </TableView>
      <TextField fx:id="txtNowPlaying" alignment="CENTER" editable="false" layoutX="321.0" layoutY="22.0" style="-fx-background-color: transparent;" text="No song is playing.">
         <font>
            <Font size="15.0" />
         </font></TextField>
   </children>
</AnchorPane>
